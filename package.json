{
  "name": "pestanas",
  "version": "2.0.0",
  "description": "Control de ventas",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-html-table-to-excel": "^2.0.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "sequelize": "^6.21.4",
    "sqlite3": "^5.0.11",
    "sweetalert2": "^11.4.29",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js",
    "dev": "concurrently -k \"cross-env BROWSER=none  npm start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "build": {
    "extends": null,
    "appId": "1010215141",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/favicon.ico"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "src/db/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "license": "MIT",
  "author": "Jair Avila <jair_p1020@hotmail.com>",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^20.3.10",
    "electron-builder": "^23.3.3"
  }
}
